{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint \"src/**/*.ts\"",
    "prisma:generate": "prisma generate --schema ../prisma/schema.prisma",
    "prisma:migrate": "DATABASE_URL=${DATABASE_URL:-file:../prisma/dev.db} prisma migrate dev --schema ../prisma/schema.prisma",
    "prisma:seed": "DATABASE_URL=${DATABASE_URL:-file:../prisma/dev.db} tsx ../prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.9",
    "prisma": "^6.16.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
